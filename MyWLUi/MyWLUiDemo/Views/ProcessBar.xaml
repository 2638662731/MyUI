<UserControl
    x:Class="MyUiDemo.Views.ProcessBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:My="clr-namespace:MyUi.Controls;assembly=MyUi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:MyUiDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MyUiDemo.ViewModels"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:ProcessBarViewModel />
    </UserControl.DataContext>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadchCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnLoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <My:MyProcessBarCtr
                Background="{DynamicResource Calendar_Head_Bg}"
                Foreground="{DynamicResource CalendarItemButtonSelect}"
                IsIndeterminate="True"
                ProcessBarType="Rect"
                Radius="12"
                Value="{Binding CurrentValue}" />

            <My:MyProcessBarCtr
                Grid.Row="2"
                Background="{DynamicResource Calendar_Head_Bg}"
                Foreground="{DynamicResource CalendarItemButtonSelect}"
                ProcessBarType="Rect"
                Radius="12"
                Value="{Binding CurrentValue}" />

            <My:MyProcessBarCtr
                Grid.Row="4"
                Background="{DynamicResource Calendar_Head_Bg}"
                Foreground="{DynamicResource CalendarItemButtonSelect}"
                IsShowPercent="True"
                ProcessBarType="Rect"
                Radius="12"
                Value="{Binding CurrentValue}" />

            <My:MyProcessBarCtr
                Grid.Row="6"
                Background="{DynamicResource Calendar_Head_Bg}"
                Foreground="{DynamicResource CalendarItemButtonSelect}"
                IsShowPercent="True"
                ProcessBarType="Circle"
                Radius="12"
                TextForeground="{DynamicResource CalendarItemButtonSelect}"
                Value="{Binding CurrentValue}" />

            <My:MyProcessBarCtr
                Grid.Row="8"
                Background="{DynamicResource Calendar_Head_Bg}"
                Foreground="{DynamicResource CalendarItemButtonSelect}"
                IsIndeterminate="True"
                IsShowPercent="False"
                ProcessBarType="Circle"
                Radius="12"
                TextForeground="{DynamicResource CalendarItemButtonSelect}"
                Value="{Binding CurrentValue}" />

            <My:MySlider
                Grid.Row="10"
                Background="Transparent"
                Maximum="100"
                Minimum="0"
                Height="20"
                Orientation="Horizontal"
                SliderSize="10"
                Value="50" />

            <My:MySlider
                Grid.Row="12"
                Height="100"
                Background="Transparent"
                Maximum="100"
                Minimum="0"
                Orientation="Vertical"
                SliderSize="10"
                Value="50" />
        </Grid>
    </Border>
</UserControl>
